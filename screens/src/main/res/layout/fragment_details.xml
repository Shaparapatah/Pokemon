<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background800"
    android:padding="16dp"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_card"
        android:orientation="vertical"
        android:padding="16dp">


        <Button
            android:id="@+id/detailFragment_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mapview"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/flying"
            android:text="Сохранить Покемона"
            android:textSize="20sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/mapview"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@id/detail_fragment_map_ll"
            android:layout_centerInParent="true"
            android:background="@drawable/map">


            <ImageView
                android:id="@+id/mapview_plot"
                android:layout_width="90dp"
                android:layout_height="90dp"
                tools:src="@drawable/place_holder_image" />

        </FrameLayout>


        <ImageView
            android:id="@+id/detail_fragment_Image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/background800"
            tools:src="@drawable/place_holder_image" />


        <TextView
            android:id="@+id/detail_fragment_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_70"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="Пикачу" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!--            <ImageView-->
        <!--                android:id="@+id/detailFragment_star"-->
        <!--                android:layout_width="40dp"-->
        <!--                android:layout_height="40dp"-->
        <!--                app:srcCompat="@drawable/star" />-->


        <LinearLayout
            android:id="@+id/stats_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/abilities_container"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="100">


            <TextView
                android:id="@+id/detail_fragment_title_stats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:text="Статистика"
                android:textColor="@color/white_70"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/stats_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stats_title_container"
            android:orientation="vertical"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_fragment_Image"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/detailf_ragment_title_abilities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_title"
                android:layout_weight="90"
                android:text="Способности"
                android:textColor="@color/white_70"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_fragment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:textColor="@color/white_70"
                android:textSize="16sp"
                tools:text="Type: Grass" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/detail_fragment_map_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stats_container"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/detail_fragment_map_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Карта Покемонов"
                android:textColor="@color/white_70"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/abilities_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container"
            android:orientation="vertical"
            android:padding="10dp" />


    </RelativeLayout>


</ScrollView>